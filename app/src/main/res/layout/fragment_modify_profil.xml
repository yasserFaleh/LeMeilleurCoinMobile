<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.modifyProfilFragment">


    <TextView
        android:id="@+id/title_const"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40dp"
        android:text="Email"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/title_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_const"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_email_colored"
        android:drawablePadding="10dp"
        android:editable="false"
        android:minHeight="48dp" />
    <TextView
        android:id="@+id/desc_const"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title_text"
        android:text="Full Name" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="300dp"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_const"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_person_colored"
        android:minHeight="48dp" />
    <TextView
        android:id="@+id/pass_const"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@id/fullname"
        android:text="New Password" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:layout_below="@id/pass_const"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_pass_colored"
        android:inputType="textPassword"
        android:minHeight="48dp" />
    <TextView
        android:id="@+id/phone_const"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@id/password_text"
        android:text="Phone number" />

    <EditText
        android:id="@+id/phone_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_const"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_phone_colored"
        android:drawablePadding="10dp"
        android:inputType="number"
        android:minHeight="48dp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSave"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        app:cardBackgroundColor="#ff6e14"
        app:cardCornerRadius="25dp"
        android:layout_alignParentBottom="true"

        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Save"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>